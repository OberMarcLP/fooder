# Production Environment Configuration
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to git!

# Database Configuration
DB_USER=nomdb
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=nomdb

# Database Connection (full URL)
DATABASE_URL=postgres://nomdb:CHANGE_ME_STRONG_PASSWORD_HERE@db:5432/nomdb?sslmode=disable

# Google Maps API
GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key

# Authentication Configuration
AUTH_MODE=both

# JWT Secret Key - Generate with: openssl rand -base64 64
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_64

# OIDC Configuration (Authentik)
OIDC_ISSUER_URL=https://auth.yourdomain.com/application/o/nom-database/
OIDC_CLIENT_ID=your_production_client_id
OIDC_CLIENT_SECRET=your_production_client_secret
OIDC_REDIRECT_URL=https://yourdomain.com/api/auth/oidc/callback

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=nom-database-uploads

# Server Configuration
PORT=8080
DEBUG=false

# CORS Configuration - comma-separated list
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend API URL
VITE_API_URL=https://yourdomain.com

# Build version
BUILD_VERSION=1.0.0
